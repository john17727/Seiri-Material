<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/courses_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        android:paddingTop="12dp"
        android:layout_gravity="start"
        android:gravity="center">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/outline_class"
            android:tint="@color/colorOnBackground"
            android:contentDescription="@string/courses" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Courses         "
            android:textSize="20sp"
            android:textColor="@color/colorOnBackground"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/assignments_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        android:paddingTop="12dp"
        android:layout_gravity="start"
        android:gravity="center">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/outline_assignment"
            android:tint="@color/colorOnBackground"
            android:contentDescription="@string/assignments" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/assignments"
            android:textSize="20sp"
            android:textColor="@color/colorOnBackground" />

    </LinearLayout>
</LinearLayout>